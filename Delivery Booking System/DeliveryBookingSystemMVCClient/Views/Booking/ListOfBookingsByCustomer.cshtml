@model IEnumerable<DeliveryBookingSystemMVCClient.Models.Booking>

@{
    ViewData["Title"] = "ListOfBookingsByCustomer";
    Layout = "~/Views/Shared/CustomerLayout.cshtml";

}

<h3>My Bookings</h3>

<br />

    <span class="badge badge-danger">@TempData["Error"]</span>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExecutiveId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeOfPickUp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeightOfPackage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PinCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExecutiveId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTimeOfPickUp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WeightOfPackage)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PinCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryStatus)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditBookingDetails", new { id = item.BookingId }) |
                    @Html.ActionLink("Cancel Booking", "CancelBooking", new { id = item.BookingId })
                </td>
            </tr>
        }
    </tbody>
</table>
