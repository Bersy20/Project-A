
@{
    ViewData["Title"] = "UpdatePassword";
    Layout = "~/Views/Shared/HomePage.cshtml";
}

<h1>Verification Of Executive</h1>

<hr />
<span class="badge badge-danger">@TempData["errorE"]</span>
<br />

<div class="row">
    <div class="col-md-4">

        <form method="post" asp-action="UpdatePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Executive Id <br />
                <input class="form-control" name="txtExecId" required/>
            </div>
            <div class="form-group">
                Executive Email ID <br />
                <input class="form-control" name="txtUserName" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" name="action" />
                <input type="submit" value="Cancel" name="action" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
