
@{
    ViewData["Title"] = "UpdatePassword2";
    Layout = "~/Views/Shared/HomePage.cshtml";
}

<h1>Set Your New Password</h1>

<hr />
<span class="badge badge-danger">@TempData["passErrE"]</span>
<br/>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="UpdatePassword2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                New Password <br />
                <input type="password" class="form-control" name="txtPass" required/>
            </div>
            <div class="form-group">
                Confirm Password <br />
                <input type="password" class="form-control" name="txtConPass" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" name="action" />
                <input type="submit" value="Cancel" name="action" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
